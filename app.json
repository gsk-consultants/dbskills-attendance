{
  "expo": {
    "name": "dbskills_attendance",
    "slug": "dbskills_attendance",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",

    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location for attendance tracking."
      }
    },

    "android": {
      "package": "com.kishore1724.dbskills_attendance",

      "permissions": [
        "INTERNET",
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],

      "config": {
        "googleMaps": {
          "apiKey": "AQ.Ab8RN6K5X9GnuHiHjPfcz22yDwlfZxwQNsYJMNCMN_EAql_cRQ"
        }
      },

      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },

      "edgeToEdgeEnabled": true
    },

    "web": {
      "favicon": "./assets/favicon.png"
    },

    "extra": {
      "eas": {
        "projectId": "be13ff77-964b-46a6-a875-a502f3cd2db5"
      }
    },

    "plugins": [
      "expo-font",
      "expo-location"
    ]
  }
}